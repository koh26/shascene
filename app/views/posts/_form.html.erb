<%= form_with(model: post, url: map_posts_path(@city), method: :post, local: true )do |f| %>

  <div class="form-group">
    <%= f.label :image, "思い出の画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :title, "思い出の名称" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :about, "詳細" %><br />
    <%= f.text_area :about %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">日付</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
        f.date_select(
        :day,
        class:'select-birth',
        id:"birth-date",
        use_month_numbers: true,
        prompt:'--',
        start_year: 1930,
        end_year: (Time.now.year - 5),
        date_separator: '%s'),
       "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %> 
    </div>
  </div>

  <div class="form-group">
    <%= f.label :town, "シティ" %><br />
    <%= f.text_field :town %>
  </div>

  <div class="form-group">
    <%= f.label :number, "番地" %><br />
    <%= f.text_field :number %>
  </div>

  <div class="form-group">
    <%= f.label :building, "建物名" %><br />
    <%= f.text_field :building %>
  </div>

  <div class="register-btn">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>

<% end %>
