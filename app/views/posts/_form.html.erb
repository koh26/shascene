<%# クリエイトフォーム %>
<%= form_with(model: post, url: map_posts_path, method: :post, class: 'registration-main', local: true )do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規投稿
    </h1>
  </div>

  <%# エラー文の表示 %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group">
   <div class='form-text-wrap'>
    <%= f.label :image, "思い出の画像", class: 'form-text' %><br />
    <span class="indispensable">必須</span>
   </div>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
    <%= f.label :title, "思い出の名称", class: 'form-text' %><br />
    <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
    <%= f.label :about, "思い出について",class: 'form-text' %><br />
    </div>
    <%= f.text_area :about %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">撮影日</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
        f.date_select(
        :day,
        class:'form-text',
        id:"birth-date",
        use_month_numbers: true,
        prompt:'--',
        start_year: 1930,
        end_year: (Time.now.year - 5),
        date_separator: '%s'),
       "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %> 
    </div>
  </div>

  <div class="form-group">
  <div class='form-text-wrap'>
    <%= f.label :town, "町名",class: 'form-text' %><br />
    </div>
    <%= f.text_field :town %>
  </div>

  <div class="form-group">
  <div class='form-text-wrap'>
    <%= f.label :number, "番地",class: 'form-text' %><br />
    </div>
    <%= f.text_field :number %>
  </div>

  <div class="form-group">
  <div class='form-text-wrap'>
    <%= f.label :building, "建物名",class: 'form-text' %><br />
    </div>
    <%= f.text_field :building %>
  </div>

  <div class="form-group">
    <div class="register-btn">
    <%= f.submit "投稿する", class:"register-red-btn" %>
    </div>
  </div>

  </div>

<% end %>
