<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shascene</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:400,700,900&display=swap" rel="stylesheet">
  </head>

  <body>

    <header class="header">
      <div class="inner">

        <div class="nav">

          <div class="logo">
            <%= link_to 'Shascene', root_path %>
          </div>

          <% if user_signed_in? %>
            <div class="nav_right">
              <%= link_to "#{current_user.nickname}", user_path(current_user), class: :user_name %>
               <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class: :nav__btn %>
             </div>
             <% else %>
            <div class="nav_right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
           <% end %>

        </div>

      </div>
    </header>

    <%= yield %>

    <footer class="footer">
      <p class="copyright">Copyright © shascene All rights reserved.</p>
    </footer>

  </body>
</html>
