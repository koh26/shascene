
<div class="inner">
    <div class="user__wrapper">

      <h2 class="page-heading">
        <%= "#{@user.nickname}さんのマイページ"%>
      </h2>

      <table class="table">
        <tbody>

          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>

          <tr>
            <th class="table__col1">誕生日</th>
            <td class="table__col2"><%= @user.birthday %></td>
          </tr>

        </tbody>
      </table>

      <h2 class="city">
        <%= "#{@user.nickname}さんの投稿"%>
      </h2>

       <%# 投稿一覧 %>
      <div class='post--contents'>
       <ul class='post-lists'>

      <% @post.each do |post| %>
      <li class='list'>
      <%= link_to map_post_path(post.city_id,post.id) do %>
        <div class='post-img-content'>
        <%= image_tag post.image, class: "post-img" %>
        </div>

        <div class='post-info'>

          <h3 class='post-name'>
          <%= post.title %>
          </h3>
          <div class='post-day'>
          <%= post.day %>
          </div>

        </div>
        <% end %>
      </li>
      <% end %>

      </ul>
      </div>
    <%# 投稿一覧 %>
    
     </div>
    </div>


