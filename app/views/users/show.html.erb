<div class="main">

  <div class="inner">

    <div class="user__wrapper">

      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>

      <table class="table">
        <tbody>

          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>

          <tr>
            <th class="table__col1">誕生日</th>
            <td class="table__col2"><%= @user.birthday %></td>
          </tr>

        </tbody>
      </table>

      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの投稿"%>
      </h2>

       <%# 投稿一覧 %>
      <div class="form-group">
        <% @post.each do |post| %>

        <div class="form-group">
        <%= image_tag post.image.variant(resize: '600x600') %>
        </div>

        <div class="form-group">
        <%= post.title %>
        </div>

        <div class="form-group">
        <%= post.about %>
        </div>

        <div class="form-group">
        <%= post.day %>
        </div>

        <div class="form-group">
        <%= post.town %>
        </div>

        <div class="form-group">
        <%= post.number %>
        </div>

        <div class="form-group">
        <%= post.building %>
        </div>

        <% end %>
      </div>

    </div>

  </div>

</div>