<div class="city">
<%= @city.name %>
</div>

    <%# 投稿検索 %>
   <div >
     <%= form_with(url: search_map_post_path(@post), local: true, method: :get, class: "search-form") do |form| %>
     <%= form.text_field :key, placeholder: "投稿を検索する", class: "search-input" %>
     <%= form.submit "検索", class: "search-btn" %>
     <% end %>
   </div>

     <%# 投稿一覧 %>
    <div class='post-contents'>
    <ul class='post-lists'>

      <% @post.each do |post| %>
      <li class='list'>
      <%= link_to map_post_path(@city, post) do %>
        <div class='post-img-content'>
        <%= image_tag post.image, class: "post-img" %>
        </div>

        <div class='post-info'>

          <h3 class='post-name'>
          <%= post.title %>
          </h3>
          <div class='post-day'>
          <%= post.day %>
          </div>

        </div>
        <% end %>
      </li>
      <% end %>

      </ul>
      </div>
    <%# 投稿一覧 %>

    <%# 投稿ががない場合の表示 %>
      <% if @post.length == 0 %>
      <div class='nopost'>
          <h3 class='city'>
            想い出の場所を<br>投稿してください
          </h3>
        </div>
        <%# <%= image_tag "noimg.png", class: "item-img" %> 
      <% end %>
     <%# /投稿がない場合の表示 %>


    <%# 投稿ボタン %>
<%= link_to(new_map_post_path(@city), class: 'purchase-btn') do %>
<span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>